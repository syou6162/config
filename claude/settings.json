      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(tree:*)",
      
      "Bash(sqlite3:*)",
      
      "Bash(uv run pytest:*)",
      "Bash(uv run:*)",

      "Bash(npm info:*)",
      "Bash(npm run lint:*)",
      "Bash(npx tsx:*)",
      "Bash(npm run test:run:*)",
      "Bash(npm install)",
      "Bash(npm view:*)",
      "Bash(npm run test:*)",
      "Bash(npm test:*)",
      "Bash(npm run format:*)",
      "Bash(npx vitest run:*)",
      "Bash(npm install:*)",
      "Bash(npm ls:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run lint)",
      "Bash(npm run typecheck:*)",
      "Bash(npm start:*)",
      "Bash(npm run build:*)",
      
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go vet:*)",
      "Bash(go tool cover:*)",
      "mcp__godoc-mcp__get_doc",
      
