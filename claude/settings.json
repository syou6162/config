      "Bash(gh pr comment:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
     
      "bash(gh repo view:*)",
      "bash(gh browse:*)",
      
